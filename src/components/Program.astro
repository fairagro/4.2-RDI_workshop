<style>
    .program-section {
      background: var(--light-gray);
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .program-section h2 {
      color: var(--teal);
      font-size: 1.8rem;
      margin-bottom: 10px;
    }
    .program-section table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    .program-section th, .program-section td {
      padding: 10px;
      border: 1px solid var(--teal);
      text-align: left;
    }
    .program-section th {
      background: var(--teal);
      color: var(--white);
    }
    .program-section td {
      background: var(--white);
    }
  </style>
  
  <section class="program-section">
    <h2>Program</h2>
    <table>
      <thead>
        <tr>
          <th>Time</th>
          <th>Event</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>10:00 AM</td>
          <td>Introduction</td>
        </tr>
        <tr>
          <td>11:00 AM</td>
          <td>Keynote Speaker</td>
        </tr>
        <tr>
          <td>1:00 PM</td>
          <td>Breakout Sessions</td>
        </tr>
        <tr>
          <td>4:00 PM</td>
          <td>Wrap-Up</td>
        </tr>
      </tbody>
    </table>
  </section>