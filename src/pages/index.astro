---
import About from "../components/About.astro";
import Program from "../components/Program.astro";
import Icon from "../assets/fairagro.ico";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RDI Workshop</title>
  <link rel="icon" href={Icon} type="image/x-icon" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
  <style>
    :root {
      --black: rgb(0, 0, 0);
      --white: rgb(255, 255, 255);
      --teal: rgb(0, 100, 84);
      --lime: rgb(167, 198, 55);
      --light-gray: rgb(241, 241, 241);
    }
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: var(--light-gray);
      color: var(--black);
      line-height: 1.6;
    }
    header {
      background: var(--teal);
      color: var(--white);
      padding: 1.5rem 0;
      text-align: center;
    }
    header h1 {
      margin: 0;
      font-size: 2rem;
    }
    header p {
      margin: 0.5rem 0 0;
      font-size: 1.2rem;
    }
    .container {
      padding: 20px;
      max-width: 800px;
      margin: 0 auto;
    }
    h2 {
      color: var(--teal);
    }
    p,
    ul {
      margin: 0.5rem 0 1.5rem;
    }
    ul {
      padding-left: 20px;
    }
    ul li {
      margin-bottom: 0.5rem;
    }
    .cta {
      text-align: center;
      margin: 30px 0;
    }
    .cta a {
      text-decoration: none;
      padding: 10px 20px;
      background: var(--lime);
      color: var(--black);
      border-radius: 5px;
      font-weight: 700;
      transition: background 0.3s ease;
    }
    .cta a:hover {
      background: var(--teal);
      color: var(--white);
    }
    footer {
      text-align: center;
      padding: 10px 0;
      background: var(--black);
      color: var(--white);
      position: fixed;
      bottom: 0;
      width: 100%;
    }
  </style>
</head>
<body>
  <header>
    <h1>
      <img
        src={Icon}
        alt="FAIRagro Icon"
        style="width: 32px; height: 32px; vertical-align: middle;"
      /> Middleware - RDI Workshop
    </h1>
    <p>FAIRagro Measuse 4.2 workshop</p>
  </header>
  <div class="container">
    <About />
    <Program />
  </div>
  <footer>
    <p>Â© 2025 FAIRagrp - Measure 4.2 RDI Workshop. All rights reserved.</p>
  </footer>
</body>
